@model AceJobAgency.Models.ApplicationUser

@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    @if (TempData["InfoMessage"] != null)
    {
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        @TempData["InfoMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    }

    <div class="row">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">Welcome to Ace Job Agency</h2>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-light btn-sm">Logout</button>
                    </form>
                </div>
                <div class="card-body">
                    <h4 class="mb-4">Your Profile Information</h4>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Personal Information</h5>
                                    <table class="table table-borderless">
                                        <tr>
                                            <td><strong>Full Name:</strong></td>
                                            <td>@Model.FirstName @Model.LastName</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Gender:</strong></td>
                                            <td>@Model.Gender</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Date of Birth:</strong></td>
                                            <td>@Model.DateOfBirth.ToString("dd MMM yyyy")</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Email:</strong></td>
                                            <td>@Model.Email</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Secure Information</h5>
                                    <table class="table table-borderless">
                                        <tr>
                                            <td><strong>NRIC:</strong></td>
                                            <td>
                                                <span class="badge bg-success">@ViewBag.DecryptedNRIC</span>
                                                <small class="text-muted d-block mt-1">
                                                    Encrypted in database
                                                </small>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.WhoAmI))
                    {
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Who Am I</h5>
                            <p class="card-text">@Html.Raw(Model.WhoAmI)</p>
                        </div>
                    </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.ResumeFilePath))
                    {
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Resume</h5>
                            <a href="@Model.ResumeFilePath" class="btn btn-outline-primary" download>
                                Download Resume
                            </a>
                        </div>
                    </div>
                    }

                    <div class="mt-4">
                        <a asp-controller="Account" asp-action="ChangePassword" class="btn btn-warning">
                            Change Password
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
