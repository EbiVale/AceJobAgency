@model AceJobAgency.Models.ErrorViewModel

@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">
                        @if (Model.StatusCode == 404)
                        {
                            <text>404 - Page Not Found</text>
                        }
                        else if (Model.StatusCode == 403)
                        {
                            <text>403 - Access Forbidden</text>
                        }
                        else
                        {
                            <text>Error @Model.StatusCode</text>
                        }
                    </h2>
                </div>
                <div class="card-body text-center">
                    @if (Model.StatusCode == 404)
                    {
                        <div class="mb-4">
                            <i class="bi bi-exclamation-triangle" style="font-size: 5rem; color: #dc3545;"></i>
                        </div>
                        <h4>Oops! The page you're looking for doesn't exist.</h4>
                        <p class="text-muted">The page may have been moved or deleted.</p>
                    }
                    else if (Model.StatusCode == 403)
                    {
                        <div class="mb-4">
                            <i class="bi bi-shield-lock" style="font-size: 5rem; color: #dc3545;"></i>
                        </div>
                        <h4>Access Forbidden</h4>
                        <p class="text-muted">You don't have permission to access this resource.</p>
                    }
                    else if (Model.StatusCode == 500)
                    {
                        <div class="mb-4">
                            <i class="bi bi-x-circle" style="font-size: 5rem; color: #dc3545;"></i>
                        </div>
                        <h4>Internal Server Error</h4>
                        <p class="text-muted">Something went wrong on our end. Please try again later.</p>
                    }
                    else
                    {
                        <div class="mb-4">
                            <i class="bi bi-exclamation-circle" style="font-size: 5rem; color: #dc3545;"></i>
                        </div>
                        <h4>@Model.ErrorMessage</h4>
                        <p class="text-muted">An unexpected error occurred.</p>
                    }

                    @if (Model.ShowRequestId)
                    {
                        <p class="mt-3">
                            <small class="text-muted">Request ID: @Model.RequestId</small>
                        </p>
                    }

                    <div class="mt-4">
                        <a href="/" class="btn btn-primary">
                            <i class="bi bi-house-door"></i> Go to Homepage
                        </a>
                        <button onclick="history.back()" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Go Back
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
